<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:background="@color/dark_green"
    android:orientation="vertical"
    android:id="@+id/fragment_container">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="300dp"
        android:layout_height="250dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/shape"
        android:id="@+id/constraint_login"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bebas_neue"
            android:layout_marginTop="10dp"
            android:text="Login"
            android:textColor="@color/dark_green"
            android:textSize="35sp"
            android:padding="10dp"
            app:layout_constraintTop_toTopOf="@+id/constraint_login"
            app:layout_constraintEnd_toEndOf="@id/constraint_login"
            app:layout_constraintStart_toStartOf="@id/constraint_login"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_baseline_person_24"
            tools:layout_editor_absoluteX="35dp"
            tools:layout_editor_absoluteY="75dp" />

        <EditText
            android:id="@+id/et_email"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/green"
            android:inputType="text"
            android:padding="5dp"
            android:paddingStart="20dp"
            android:text="E-mail"
            android:textColor="@color/dark_green"
            app:layout_constraintEnd_toEndOf="@id/constraint_login"
            app:layout_constraintStart_toStartOf="@id/constraint_login"
            app:layout_constraintTop_toBottomOf="@+id/tv_login" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/green"
            android:inputType="textPassword"
            android:padding="5dp"
            android:paddingStart="20dp"
            android:text="Senha"
            android:textColor="@color/dark_green"
            app:layout_constraintEnd_toEndOf="@id/constraint_login"
            app:layout_constraintStart_toStartOf="@id/constraint_login"
            app:layout_constraintTop_toBottomOf="@+id/et_email" />

        <Button
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:padding="6dp"
            android:textColor="@color/dark_green"
            android:backgroundTint="#ED1E99A5"
            android:fontFamily="@font/bebas_neue"
            android:text="Entrar"
            app:layout_constraintTop_toBottomOf="@+id/et_password"
            app:layout_constraintStart_toStartOf="@id/constraint_login"
            app:layout_constraintEnd_toEndOf="@+id/constraint_login"/>

    </androidx.constraintlayout.widget.ConstraintLayout>




